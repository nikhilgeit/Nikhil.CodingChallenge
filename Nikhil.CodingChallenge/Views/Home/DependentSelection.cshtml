@model Nikhil.CodingChallenge.ViewModels.DependentSelectionViewModel
@using Nikhil.CodingChallenge.Helpers
@{
    var dependentSelectionList = @HelperService.GetDependentSelectionList();
}
<div class="row">
    <div class="col-md-10">
        <div>
            @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @id = "registerFormId", @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4></h4>
                <hr />

                <div class="form-group">
                    @Html.LabelFor(m => m.DependentsCount, new { @class = "col-md-6 control-label" })
                    <div class="col-md-2">
                        @Html.DropDownListFor(m => m.DependentsCount, dependentSelectionList)
                        @Html.ValidationMessageFor(x => x.DependentsCount)
                    </div>
                    <div class="col-md-2">
                        <input type="submit" class="btn btn-default" value="Submit" />
                    </div>
                </div>

                <div class="form-group">
                    
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
} 