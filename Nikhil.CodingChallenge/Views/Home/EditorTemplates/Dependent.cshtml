@model Nikhil.CodingChallenge.Models.Dependent
@using Nikhil.CodingChallenge.Helpers
@{
    var dependentTypesList = @HelperService.GetDependentTypeList();
}

<div class="form-group">
    @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>

</div>
<div class="form-group">
    @Html.LabelFor(m => m.Type, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.DropDownListFor(m => m.Type, dependentTypesList)
    </div>

</div>
