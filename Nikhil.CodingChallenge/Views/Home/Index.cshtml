@model Nikhil.CodingChallenge.Models.Employee

@{
    ViewBag.Title = "Home Page";
}
<div class="row">
    <div class="col-md-10">
        <div>
            @using (Html.BeginForm("Index", "DecuctionResults", FormMethod.Post, new { @id = "registerFormId", @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Employee Name</h4>
                <hr />

                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>

                </div>
                if (Model.Dependents.Any())
                {
                <h4>Dependents</h4>
                @Html.EditorFor(m => m.Dependents);
                }

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Submit" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
} 